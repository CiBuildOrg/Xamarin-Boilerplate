<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="MobileTemplate.Core.Pages.Landing.LandingView">
    <StackLayout Padding="6">
        <Image Source="{Binding Image.Value}" HorizontalOptions="Center" Margin="32" />
        <Label Text="{Binding Text.Value}" />
        <StackLayout x:Name="NavigationStack" /> <!-- Population is handled in code: Xamarin does not support data templating for stack layouts. -->
    </StackLayout>
</ScrollView>
