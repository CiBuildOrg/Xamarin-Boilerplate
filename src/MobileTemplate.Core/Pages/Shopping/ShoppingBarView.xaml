<?xml version="1.0" encoding="UTF-8"?>
<StackLayout xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="MobileTemplate.Core.Pages.Shopping.ShoppingBarView"
             Orientation="Horizontal" BackgroundColor="#11000000" Padding="6">
    <Label Text="Cart" FontAttributes="Bold" VerticalOptions="Center" />
    <Label Text="{Binding TotalItemsLabel.Value}" VerticalOptions="Center" />
    <Label Text="{Binding TotalValueLabel.Value}" VerticalOptions="Center" />
    <Button Text="View Cart" Command="{Binding ViewCommand}" HorizontalOptions="EndAndExpand" VerticalOptions="Center" />
</StackLayout>
