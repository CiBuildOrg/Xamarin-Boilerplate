<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="MobileTemplate.Core.Pages.ReactiveSample.ReactiveSampleView">
    <StackLayout Padding="6">
      <Entry Text="{Binding TextInput.Value}" Placeholder="Enter some Text" />
      <Label Text="{Binding StringLengthLabel.Value}" />
      <Label Text="{Binding FirstCharacterLabel.Value}" />
      <Label Text="{Binding TimeOnPageLabel.Value}" />
    </StackLayout>
</ScrollView>
